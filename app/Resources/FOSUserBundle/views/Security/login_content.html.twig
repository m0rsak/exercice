{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="container" style="margin-top: 50px">
    <div class="col-6">
        <form action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}
            <div>
                <label for="username">Adresse e-mail :</label>
                <p><input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" autofocus required="required" autocomplete="email" /></p>
            </div>

            <div>
                <label for="password">Mot de passe :</label>
                <p><input type="password" class="form-control" id="password" name="_password" required="required" autocomplete="current-password" /></p>
            </div>

            <div>
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            </div>


            <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
        </form>
    </div>
</div>

{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h2>Bonjour {{ user.firstName }},</h2>
        <p>Vous retrouverez ci-dessous les détails de votre compte: </p>

        <div class="col-6 offset-1">
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Nom et Prénom : {{ user.lastName }} {{ user.firstName }}</li>
            <li class="list-group-item">Date de naissance : {{ user.birthDate|date('d-m-Y') }}</li>
            <li class="list-group-item">Adresse Email : {{ user.email }}</li>
            <li class="list-group-item">Date d'inscription : {{ user.creationDate|date('d-m-Y') }}</li>
        </ul>
        </div>

    </div>
{% endblock %}

